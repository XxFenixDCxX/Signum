    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:color="#CCCCCC" android:width="2dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
